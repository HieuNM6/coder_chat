<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<% if logged_in? %>
  <h2>
    wellcome <%= current_user.name  %>! | <%= link_to "Logout", logout_path, 
      method: :delete %> <br>
      You have <%= pluralize(@unread_messages_count, "unread message") %> <br>
      <%= link_to "New Message", new_message_path %> |
      <%= link_to "Inbox", messages_path %> | 
